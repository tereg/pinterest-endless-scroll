<% count = 1 %>

$('.individual-pins').append('<%= j render partial: 'pin', collection: @pins %>');
<% if @pins.next_page %>
  $('.pagination').replaceWith('<%= j will_paginate(@pins) %>');
<% end %>
<% if (@pins.count/count == 48) %>
  $('.individual-pins').append('<%= j render partial: 'pin', collection: @pins %>');
  <% count += 1 %>
<% end %>

